<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_action_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="64dp"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/toggle_mic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/call_mic_toggle_background"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal"
        android:textOff=""
        android:textOn="" />

    <ImageButton
        android:id="@+id/button_hangup_call"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/call_shape_oval_red"
        android:src="@drawable/call_end_white" />



    <ToggleButton
        android:id="@+id/toggle_speaker"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/call_speaker_toggle_background"
        android:checked="true"
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
        />

</LinearLayout>